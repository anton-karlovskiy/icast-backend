{
  "name": "icast-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel -d ./build ./src -s",
    "build": "npm run clean && npm run build-babel",
    "start": "cross-env NODE_ENV=production COOKIE_ENV=production npm run build && node ./build/index.js",
    "dev-server-dev-db": "cross-env NODE_ENV=development COOKIE_ENV=development nodemon --exec babel-node src/index.js",
    "dev-server-prod-db": "cross-env NODE_ENV=production COOKIE_ENV=development nodemon --exec babel-node src/index.js",
    "seed": "nodemon --exec babel-node src/database/seed",
    "seed-test": "nodemon --exec babel-node src/database/seed/test",
    "heroku-deploy": "git push heroku HEAD:master",
    "lint": "eslint src/**/*.+(js)",
    "lint-fix": "eslint --fix src/**/*.+(js)",
    "format": "prettier --write src/**/*.+(js)"
  },
  "lint-staged": {
    "*.+(js|jsx)": [
      "eslint --fix"
    ],
    "*.+(json|yml|yaml|css|md)": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/icastdev-6/backend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/icastdev-6/backend/issues"
  },
  "homepage": "https://github.com/icastdev-6/backend#readme",
  "dependencies": {
    "apollo-datasource-rest": "^0.6.11",
    "apollo-server": "^2.9.15",
    "apollo-server-express": "^2.9.16",
    "bcrypt": "^3.0.6",
    "chance": "^1.1.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "date-fns": "^2.10.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^14.5.8",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mongoose": "^5.8.7",
    "node-cron": "^2.0.3",
    "nodemailer": "^6.4.10",
    "request": "^2.88.0",
    "request-promise": "^4.2.5",
    "sendmail": "^1.6.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.7.7",
    "@babel/eslint-parser": "^7.12.1",
    "@babel/node": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.7.7",
    "babel-plugin-root-import": "^6.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.16.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.2",
    "prettier": "^2.2.1"
  }
}
